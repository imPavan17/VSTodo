{
	"name": "vstodo",
	"displayName": "VSTodo",
	"description": "Simple todo app",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vstodo.helloWorld",
		"onCommand:vstodo.askQuestion",
		"onCommand:vstodo.refresh",
		"onView:vstodo-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vstodo-sidebar-view",
					"title": "VSTodo",
					"icon": "media/checklist.svg"
				}
			]
		},
		"views": {
			"vstodo-sidebar-view": [
				{
					"type": "webview",
					"id": "vstodo-sidebar",
					"name": "VSTodo",
					"icon": "media/checklist.svg",
					"contextualTitle": "VSTodo"
				}
			]
		},
		"commands": [
			{
				"command": "vstodo.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vstodo.askQuestion",
				"category": "VSTodo",
				"title": "Ask a Question"
			},
			{
				"command": "vstodo.refresh",
				"category": "VSTodo",
				"title": "Refresh"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"concurrently": "^6.2.1",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"rollup": "^2.3.4",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.42.4",
		"svelte-check": "^2.2.5",
		"svelte-preprocess": "^4.9.1",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
